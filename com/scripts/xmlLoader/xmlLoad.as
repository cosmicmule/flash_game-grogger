package com.scripts.xmlLoader{	import flash.display.Sprite;    import flash.net.*;    import flash.display.*;    import flash.events.*;	public class  xmlLoad extends Sprite	{		public var xml:XML;		public var xmlloader:URLLoader = new URLLoader();				public function xmlLoad(ePass:String):void		{			xmlloader.addEventListener(Event.COMPLETE, loaderCompleteHandler);			xmlloader.load(new URLRequest(ePass));					}				public function loaderCompleteHandler(event:Event):void {			xml = new XML(event.target.data);			dispatchEvent(new Event(Event.COMPLETE));        }				public function getXML():XMLList		{			return xml.id;		}	}}