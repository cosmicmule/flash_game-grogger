package com.scripts.sound{	import flash.display.Sprite;	import flash.display.Loader;    import flash.events.*;    import flash.net.URLRequest;	import flash.media.Sound;    import flash.media.SoundChannel;		import com.scripts.sound.soundLoader;			public class soundStarter extends Sprite	{		 public var fullUrlSound:String;		 public var isStopped:Boolean;		 public var mySound:soundLoader;		 private var musicChannel;		 public var myLoop;				public function soundStarter (Spass:String,loopPass:Boolean)		{			myLoop = loopPass;			mySound = new soundLoader("sounds/"+Spass+"mp3");			mySound.addEventListener(Event.COMPLETE,soundCompleted)			addChild(mySound);		}				private function soundCompleted(e:Event):void		{			playMusic()		}		public function playMusic():void		{    		musicChannel = mySound.song.play();    		if(myLoop == true)			{				trace("fired");				musicChannel.addEventListener(Event.SOUND_COMPLETE, loopMusic);			}		}		private function loopMusic(e:Event):void		{			if (mySound.soundChannel == null)   			 {        		musicChannel.removeEventListener(Event.SOUND_COMPLETE, loopMusic);								if(myLoop == true){playMusic();}    		}		}		public function soundstop():void		{			myLoop = false;		}			}}