package com.scripts.scoreBoard{	import flash.text.*;	import flash.display.Sprite;	import com.scripts.scoreBoard.namelist;		public class scoreboardBase extends Sprite	{		public var scoreboardobj:namelist;		public var myLocalArray:Array = new Array();		private const DefaultText =  "Score:";				public function scoreboardBase():void		{			for(var B:Number = 0; B < 2; B++)			{				scoreboardobj = new namelist;				scoreboardobj.genericTextField.textImport.text = DefaultText;				scoreboardobj.genericTextField.textImport.autoSize = TextFieldAutoSize.LEFT;				addChild(scoreboardobj);				myLocalArray.push(scoreboardobj);						if(B > 0){scoreboardobj.x = getChildAt(0).width+10; myLocalArray[1].genericTextField.textImport.text = "0"}			}		}		public function addScore()		{			var currentNumber:Number = Number(myLocalArray[1].genericTextField.textImport.text)+10; 			myLocalArray[1].genericTextField.textImport.text = currentNumber;		}		public function addToScore(addToScore:Number)		{			var currentNumber:Number = Number(myLocalArray[1].genericTextField.textImport.text)+addToScore; 			myLocalArray[1].genericTextField.textImport.text = currentNumber;		}		public function getScore():String		{			var currentNumber:String = myLocalArray[1].genericTextField.textImport.text; 			return currentNumber;		}	}}