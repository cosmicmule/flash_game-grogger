package com.scripts.gameTimer{	import flash.display.Sprite;	import flash.utils.Timer;    import flash.events.TimerEvent;	import flash.events.Event;	import com.scripts.gameTimer.gameTimerInstance;	import com.scripts.sound.*;	public class gameTimerStarter extends Sprite	{		private var myTimer:Timer = new Timer(1000);		private var myTimerBar:gameTimerInstance;		public var LineStart:Number;		public var localSoundCall:Boolean = true;						public function gameTimerStarter(W:Number,H:Number,level:Object){			myTimerBar = new gameTimerInstance(W,H) ;			level.addChild(myTimerBar);			LineStart= myTimerBar.width;			myTimer.addEventListener("timer", timerHandler);            myTimer.start();		}										private function timerHandler(event:TimerEvent):void {			myTimerBar.width -= LineStart/32;			if(myTimerBar.width < 1){myTimer.reset();myTimerBar.width = LineStart;myTimer.start();localSoundCall = true;timercomplete()};						if(myTimerBar.width <= LineStart/2)			{				if(localSoundCall == true){					var mytimesound = new soundStarter("dp_frogger_time.",false);					localSoundCall = false;				}			}		}				// calls document class to kill grogger if time runs out		private function timercomplete():void {			dispatchEvent(new Event("kill"));        }				// setter /getter functions listed below. These functions are  to talk with this class.		// set the position of the timer bar at the beginning of the game.		public function newposition(X:uint,Y:uint):void {			myTimerBar.x = X;			myTimerBar.y = Y;        }				//reset the timer		public function resetTimer():void {			myTimer.reset();			myTimerBar.width = LineStart;			myTimer.start();        }				// stop timer		public function stopTimer():void {			myTimer.stop();        }	}}