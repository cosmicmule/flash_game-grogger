package com.scripts.lives{	import flash.display.Sprite;	import com.scripts.lives.life	import com.scripts.scoreBoard.namelist	import flash.text.TextField;	import flash.text.TextFieldAutoSize;    import flash.text.TextFormat;	import flash.events.Event;		public class livesStarter extends Sprite	{		public var myLife:life;		public var lifeArray:Array = new Array();		public var myTextField:namelist = new namelist;		public var format:TextFormat = new TextFormat();				public function livesStarter():void		{			configureLabel();			myTextField.genericTextField.textImport.text = "LIVES";			myTextField.genericTextField.textImport.selectable = false;			myTextField.genericTextField.textImport.autoSize = TextFieldAutoSize.LEFT;						myTextField.y = 15;			myTextField.x = 650;			addChild(myTextField);						for(var R:Number = 0; R < 3;R++){			myLife = new life;			myLife.x = 25 + myTextField.x + myTextField.width + (R*35);			myLife.y = 25;			addChild(myLife);			lifeArray.push(myLife);									}		}		private function configureLabel():void {            format.font = "Verdana";            format.color = 0xFFFFFF;            format.size = 12;        }		private function mygameover():void {			dispatchEvent(new Event("gameover2"))        }		public function killLive():void 		{						if(lifeArray.length > 0)			 {				removeChild(lifeArray[0]);								lifeArray.shift();								for(var ResetX:Number = 0; ResetX < lifeArray.length;ResetX++)				{lifeArray[ResetX].x -= 35; }			 			 }else{				mygameover();				 }		}	}}